<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">


    <TextView
        android:id="@+id/website_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voor meer informatie over de reizen kunt u terecht op onze site: "
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:textStyle="normal"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="fontana-travel.nl"
        android:autoLink="web"
        android:textColorLink="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:textStyle="normal"/>
    <TextView
        android:id="@+id/bereikbaarheid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Wij zijn bereikbaar van maandag t/m vrijdag
van 09.00 uur - 17.30 uur:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:textStyle="normal"/>
    <TextView
        android:id="@+id/telefoonnummer_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Telefoonnumer:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/telefoonnummer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="024 - 44 25 847"
        android:autoLink="phone"
        android:textColorLink="@color/colorPrimaryDark"/>
    <TextView
        android:id="@+id/email_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Email:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="info@fontana-travel.nl"
        android:layout_marginLeft="10dp"
        android:autoLink="email"
        android:textColorLink="@color/colorPrimaryDark"
        android:textStyle="normal"/>

</LinearLayout>