<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
        <item name="android:actionBarTheme">@style/CustomActionBarTheme</item>
    </style>

    <style name="CustomActionBarTheme" parent="@android:style/ThemeOverlay.Material.ActionBar">
        <item name="android:colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="CustomActionBar" parent="@android:style/Widget.Material.Light.ActionBar">
        <item name="android:background">@color/colorAccentOld</item>
        <item name="android:titleTextStyle">@style/CustomActionBarTitle</item>
    </style>

    <style name="CustomActionBarTitle" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="H1">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="H2">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="H3">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="H4">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="H5">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="H6">
        <item name="android:textSize">8sp</item>
    </style>

</resources>
